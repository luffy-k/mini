/* tictactoe.wxss */
@import '../game/game.wxss';

.game-info{
  grid-template-columns: 14% 62% 14%;
  grid-template-rows: 1fr;
  grid-gap: 2%;
  padding: 3% 0;
}
.game-info .txt{
  width: 1.2em;
}
.game-info .iconfont{
  font-size: 1.4em;
}
.game-info > .game-square{
  font-size: 1.2em;
}
.game-info > .game-square:nth-child(2n+1){
  line-height: 1;
}
.game-info > .game-square:nth-child(2){
  background-image: linear-gradient(45deg,#8799a3,#aaa);
}

.game-board{
  grid-template-columns: repeat(3, 30%);
  grid-template-rows: repeat(3, 30%);
  grid-gap: 2%;
}
.game-board > .game-square{
  font-size: 4em;
}
.game-board > .game-square:nth-child(1){
  background-image: linear-gradient(45deg,#ef3429,#e54d42);
}
.game-board > .game-square:nth-child(2){
  background-image: linear-gradient(45deg,#f43f3b,#f68f25);
}
.game-board > .game-square:nth-child(3){
  background-image: linear-gradient(45deg,#4ba846,#8dc63f);
}
.game-board > .game-square:nth-child(4){
  background-image: linear-gradient(45deg,#0476c2,#1cbbb4);
}
.game-board > .game-square:nth-child(5){
  background-image: linear-gradient(45deg,#e03997,#c077af);
}
.game-board > .game-square:nth-child(6){
  background-image: linear-gradient(45deg,#fbbd08,#f8d29d);
}
.game-board > .game-square:nth-child(7){
  background-image: linear-gradient(45deg,#333,#8799a3);
}
.game-board > .game-square:nth-child(8){
  background-image: linear-gradient(45deg,#d0e4a8,#e7ebed);
}
.game-board > .game-square:nth-child(9){
  background-image: linear-gradient(45deg,#b4a87f,#fef2ce);
}

.game-action{
  grid-template-columns: 70% 22%;
  grid-template-rows: 1fr;
  grid-gap: 2%;
  padding: 3% 0;
}
.game-action > .game-square{
  font-size: 2em;
}
.game-option{
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}
.game-option > view:nth-child(1){
  background-image: linear-gradient(45deg,#f43f3b,#ec008c);
}
.game-option > view:nth-child(2){
  background-image: linear-gradient(45deg,#ff9700,#ed1c24);
}
.game-option > view:nth-child(3){
  background-image: linear-gradient(45deg,#ec008c,#6739b6);
}
